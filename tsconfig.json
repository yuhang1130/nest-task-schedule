{
  "compilerOptions": {
    // 模块系统 - 使用 CommonJS 模块系统（Node.js 标准）
    "module": "nodenext",
    // 类型检查 - 允许隐式 any 类型
    "noImplicitAny": false,
    // 代码质量 - 允许未使用的局部变量
    "noUnusedLocals": false,
    // 编译输出 - 移除注释
    "removeComments": true,
    // 类型检查 - 启用严格的 null 检查
    "strictNullChecks": true,
    // 类型检查 - 关闭类属性必须初始化的检查
    "strictPropertyInitialization": false,
    // 代码质量 - 强制文件名大小写一致
    "forceConsistentCasingInFileNames": true,
    // 编译选项 - 包含默认库文件
    "noLib": false,
    // 装饰器支持 - 生成装饰器元数据
    "emitDecoratorMetadata": true,
    // 装饰器支持 - 启用实验性装饰器
    "experimentalDecorators": true,
    // 异常处理 - catch 变量类型为 any 而非 unknown
    "useUnknownInCatchVariables": false,
    // 编译目标 - 编译目标为 ES2021
    "target": "ES2021",
    // 调试支持 - 生成 source map 文件
    "sourceMap": true,
    // 编译选项 - 不允许编译 JavaScript 文件
    "allowJs": false,
    // 输出目录 - 编译输出到 dist 目录
    "outDir": "dist",
    // 路径解析 - 基础路径为当前目录
    "baseUrl": ".",
    // 路径映射 - @/ 别名映射到 src/ 目录
    "paths": {
      "@/*": ["src/*"]
    },
  },
  // 排除编译 - 排除 node_modules、dist、var 目录和所有测试文件
  "exclude": ["node_modules", "dist", "var", "**/*spec.ts", "test", "temp"]
}
